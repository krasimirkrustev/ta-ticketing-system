@model IEnumerable<WebApp.Models.TicketViewModel>
@{
    ViewBag.Title = "Ticketing System";
}

<div class="row-fluid">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var ticket = Model.ElementAt(i);
        if (i != 0 && (i % 3 == 0))
        {
            @:</div>
        @:<div class="row-fluid">
        }

        <div class="span4">
            <h2>@ticket.Title</h2>
            <p><strong>Category: </strong>@ticket.CategoryName</p>
            <p><strong>Author: </strong>@ticket.AuthorName</p>
            <p>@ticket.NumberOfComments comment(s)</p>
            <p><a href="@Url.Action("TicketDetails", "Tickets", new { id = @ticket.Id })" class="btn">More Details...</a></p>
        </div>
    }
</div>